{
  "name": "marketbrewer-seo-platform",
  "version": "1.0.0",
  "description": "Local-first SEO content generation platform",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/server",
    "packages/dashboard",
    "packages/worker"
  ],
  "scripts": {
    "dev:dashboard": "npm run dev --workspace=packages/dashboard",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:worker": "npm run dev --workspace=packages/worker",
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:dashboard": "npm run build --workspace=packages/dashboard",
    "build:server": "npm run build --workspace=packages/server",
    "typecheck": "tsc --noEmit",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run test:shared && npm run test:worker && npm run test:server",
    "test:shared": "jest --config packages/shared/jest.config.js --coverage",
    "test:server": "jest --config packages/server/jest.config.js --coverage",
    "test:worker": "jest --config packages/worker/jest.config.js --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "helmet": "^8.1.0"
  }
}
