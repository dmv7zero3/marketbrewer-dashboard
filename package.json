{
  "name": "marketbrewer-seo-platform",
  "version": "1.0.0",
  "description": "Local-first SEO content generation platform",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/dashboard",
    "packages/client-portal",
    "packages/lambda-api",
    "packages/lambda-worker"
  ],
  "scripts": {
    "prestart": "node scripts/check-node-version.js",
    "start": "REACT_APP_API_TOKEN=${REACT_APP_API_TOKEN:-local-dev-token} DASHBOARD_PORT=${DASHBOARD_PORT:-3002} npm run dev:dashboard",
    "check:node": "node scripts/check-node-version.js",
    "dev:dashboard": "REACT_APP_API_TOKEN=${REACT_APP_API_TOKEN:-local-dev-token} DASHBOARD_PORT=${DASHBOARD_PORT:-3002} npm run dev --workspace=packages/dashboard",
    "dev:server": "ts-node-esm --project packages/lambda-api/tsconfig.json packages/lambda-api/src/local-server.ts",
    "dev:worker": "ts-node-esm --project packages/lambda-worker/tsconfig.json packages/lambda-worker/src/local-worker.ts",
    "dev:client-portal": "REACT_APP_API_TOKEN=${REACT_APP_API_TOKEN:-local-dev-token} CLIENT_PORTAL_PORT=${CLIENT_PORTAL_PORT:-3003} npm run dev --workspace=packages/client-portal",
    "local:bootstrap": "ts-node-esm scripts/local-bootstrap.ts",
    "seed:clients": "ts-node-esm scripts/seed-clients.ts",
    "dev:local": "bash scripts/local-dev-up.sh",
    "dev:local:down": "bash scripts/local-dev-down.sh",
    "dev:local:aws": "SKIP_DOCKER=1 DDB_ENDPOINT= SQS_ENDPOINT= bash scripts/local-dev-up.sh",
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:dashboard": "npm run build --workspace=packages/dashboard",
    "build:lambda": "npm run build --workspace=packages/lambda-api && npm run build --workspace=packages/lambda-worker",
    "build:all": "npm run build:shared && npm run build:lambda && npm run build:dashboard",
    "build:prod": "NODE_ENV=production npm run build:all",
    "typecheck": "npm run build:shared && tsc --noEmit",
    "lint": "eslint packages/dashboard/src --ext .ts,.tsx",
    "lint:all": "eslint packages/*/src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run test:shared && npm run test:lambda && npm run test:dashboard",
    "test:dashboard": "jest --config packages/dashboard/jest.config.js --coverage --watchman=false",
    "test:lambda": "jest --config packages/lambda-api/jest.config.js --coverage --watchman=false && jest --config packages/lambda-worker/jest.config.js --coverage --watchman=false",
    "test:shared": "jest --config packages/shared/jest.config.js --coverage --watchman=false",
    "smoke:local": "bash scripts/smoke-tests.sh local",
    "smoke:staging": "bash scripts/smoke-tests.sh staging",
    "smoke:prod": "bash scripts/smoke-tests.sh prod",
    "verify:all": "npm run typecheck && npm run lint && npm run test:ci && npm run build:prod"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "puppeteer": "^24.34.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "volta": {
    "node": "20.19.6"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.957.0",
    "@aws-sdk/client-dynamodb": "^3.957.0",
    "@aws-sdk/client-sqs": "^3.957.0",
    "@aws-sdk/lib-dynamodb": "^3.957.0",
    "helmet": "^8.1.0"
  }
}
