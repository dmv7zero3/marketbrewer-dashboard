{
  "name": "marketbrewer-seo-platform",
  "version": "1.0.0",
  "description": "Local-first SEO content generation platform",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/server",
    "packages/dashboard",
    "packages/worker"
  ],
  "scripts": {
    "start": "API_TOKEN=local-dev-token REACT_APP_API_TOKEN=local-dev-token CORS_DASHBOARD_URL=http://localhost:3002 DASHBOARD_PORT=3002 npm run dev:server & npm run dev:dashboard",
    "dev:dashboard": "REACT_APP_API_TOKEN=${REACT_APP_API_TOKEN:-local-dev-token} DASHBOARD_PORT=${DASHBOARD_PORT:-3002} npm run dev --workspace=packages/dashboard",
    "dev:server": "API_TOKEN=${API_TOKEN:-local-dev-token} CORS_DASHBOARD_URL=${CORS_DASHBOARD_URL:-http://localhost:3002} npm run dev --workspace=packages/server",
    "dev:worker": "npm run dev --workspace=packages/worker",
    "build": "npm run build --workspaces",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:dashboard": "npm run build --workspace=packages/dashboard",
    "build:server": "npm run build --workspace=packages/server",
    "build:all": "npm run build:shared && npm run build:server && npm run build:dashboard",
    "build:prod": "NODE_ENV=production npm run build:all",
    "typecheck": "tsc --noEmit",
    "lint": "eslint packages/dashboard/src --ext .ts,.tsx",
    "lint:all": "eslint packages/*/src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "npm run test:shared && npm run test:worker && npm run test:server",
    "test:shared": "jest --config packages/shared/jest.config.js --coverage",
    "test:server": "jest --config packages/server/jest.config.js --coverage",
    "test:server:locations": "jest --config packages/server/jest.config.js routes/__tests__/locations.integration.test.ts",
    "test:worker": "jest --config packages/worker/jest.config.js --coverage",
    "seed:nash-smashed": "tsx scripts/seed-nash-smashed.ts",
    "seed:nash-smashed-metadata": "tsx scripts/seed-nash-smashed-metadata.ts",
    "test:keywords-api": "NODE_ENV=development bash scripts/test-keywords-api.sh",
    "test:locations-api": "bash scripts/test-locations-api.sh",
    "test:connection": "bash scripts/test-connection.sh",
    "smoke:local": "bash scripts/smoke-tests.sh local",
    "smoke:staging": "bash scripts/smoke-tests.sh staging",
    "smoke:prod": "bash scripts/smoke-tests.sh prod",
    "verify:all": "npm run typecheck && npm run lint && npm run test:ci && npm run build:prod",
    "health:check": "curl http://localhost:3001/health | jq '.'",
    "smoke:local": "bash scripts/smoke-tests.sh local",
    "smoke:staging": "bash scripts/smoke-tests.sh staging",
    "smoke:prod": "bash scripts/smoke-tests.sh prod"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-typescript": "^7.23.0",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "helmet": "^8.1.0"
  }
}
